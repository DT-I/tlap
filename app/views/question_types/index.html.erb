<p id="notice"><%= notice %></p>

<h1>Question Types</h1>

<table>
  <thead>
    <tr>
      <th>Question type name</th>
      <th>Question type slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_types.each do |question_type| %>
      <tr>
        <td><%= question_type.question_type_name %></td>
        <td><%= question_type.question_type_slug %></td>
        <td><%= link_to 'Show', question_type %></td>
        <td><%= link_to 'Edit', edit_question_type_path(question_type) %></td>
        <td><%= link_to 'Destroy', question_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

